<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E3E3"
    tools:context=".Fragment.InformationFragment">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#43A047"
        android:gravity="center"
        android:text="THÔNG TIN  CÁ NHÂN"
        android:textColor="#F8F5F5"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText1"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="4dp"
        android:background="#F4F1F1"
        android:backgroundTint="#FBFBFB"
        android:drawableLeft="@drawable/iconuser"
        android:ems="10"
        android:hint=" Tài Khoản"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F8F8F8"
        android:backgroundTint="#FDFAFA"
        android:drawableLeft="@drawable/iconhome1"
        android:ems="10"
        android:hint="  Địa Chỉ"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/editTextText4" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="#FAF6F6"
        android:backgroundTint="#FBFBFB"
        android:drawableLeft="@drawable/iconbirthday"
        android:ems="10"
        android:hint="  Năm Sinh"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2" />

    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#F9F9F9"
        android:backgroundTint="#F9F9F9"
        android:drawableLeft="@drawable/iconemail"
        android:ems="10"
        android:hint="  Email"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="264dp"
        android:backgroundTint="#43A047"
        android:text="Lưu Thay Đổi"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="9dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="63dp"

        android:background="#FAFAFA"
        android:gravity="center|top|left"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/editTextText1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableLeft="@drawable/icongender1" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Nam" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="10dp"
            android:text="Nữ" />


    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>