<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EnterOTPActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_enter_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#43A047"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edt_Enter_Otp"
        android:layout_width="342dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:ems="10"
        android:hint="Enter OTP Code"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_verifyNumber"
        android:layout_width="348dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:backgroundTint="#43A047"
        android:text="SEND"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn không thấy mã Otp?"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/btn_guilai_Otp"
        android:layout_width="200dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="95dp"
        android:backgroundTint="#43A047"
        android:text="Gửi lại mã"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

</LinearLayout>